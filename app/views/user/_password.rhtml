<% @sources ||= [] %>
<% @sources << __FILE__%>

<div class="user_password">
  <table>
    <%= make_row '<label>Password</label>', password_field('user',"password", :size => 30)  %>
    <%= make_row '<label>Password Confirmation</label>', password_field('user',"password_confirmation", :size => 30)  %>
   <% if submit %>
      <%= form_input :submit_button, 'Change password' %>
    <% end %>
  </table>
</div>                                                                          